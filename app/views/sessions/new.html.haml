-title @title

- form_for(:session, :url => sessions_path) do |f|
  %div{ :class => "field"}
    = f.label :name
    = f.text_field :name

  %div{ :class => "field"}
    = f.label :password
    = f.password_field :password

  %div{ :class => "actions" }
    = f.submit "Sign up"

%p 
  New user?
  = link_to "Sign up now!", signup_path