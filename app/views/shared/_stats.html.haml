- @user ||= current_user
%div.stats
  %table{ :summary => "User stats"}
    %tr
      %td
        %a{:href => following_user_path(@user)}
          %span#following.stat
            = @user.following.count
            following
      %td
        %a{:href => followers_user_path(@user)}
          %span#followers.stat
            = @user.followers.count
            followers